# ===========================================
# Frontend Port Configuration
# ===========================================
# Frontend runs on port 3001 by default to avoid conflict with backend on 3000
PORT=3001

# ===========================================
# Backend API Configuration
# ===========================================
# Backend API URL for API calls
REACT_APP_API_URL=http://localhost:3000/api

# ===========================================
# WebSocket Configuration
# ===========================================
REACT_APP_WS_URL=ws://localhost:3000

# ===========================================
# Feature Flags
# ===========================================
REACT_APP_ENABLE_EMAIL_IP_ATTACKS=true
REACT_APP_ENABLE_SUPREME_COMBOS=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# ===========================================
# UI Configuration
# ===========================================
REACT_APP_THEME=dark
REACT_APP_AUTO_REFRESH_INTERVAL=30000

# ===========================================
# Build Configuration
# ===========================================
# Set to false in development, true in production
GENERATE_SOURCEMAP=true
