# ===========================================
# Server Configuration
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your-secret-key-change-this-in-production-must-be-at-least-32-characters-long

# ===========================================
# Database Configuration
# ===========================================
# Set DB_TYPE to 'sqlite' or 'postgres'
DB_TYPE=sqlite

# Database URL (generic connection string - required)
DATABASE_URL=sqlite:./database.sqlite

# SQLite Configuration (when DB_TYPE=sqlite)
DB_PATH=./database.sqlite

# PostgreSQL Configuration (when DB_TYPE=postgres)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/hydra_termux
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hydra_termux
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password-change-this

# ===========================================
# Supabase Configuration (for advanced features)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# ===========================================
# Redis Configuration (for queues and caching)
# ===========================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# Email Notifications (SMTP)
# ===========================================
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=your-email@gmail.com

# ===========================================
# Webhook Notifications
# ===========================================
WEBHOOK_NOTIFICATIONS_ENABLED=false
WEBHOOK_URLS=https://hooks.slack.com/services/YOUR/WEBHOOK/URL,https://discord.com/api/webhooks/YOUR/WEBHOOK

# ===========================================
# Attack Orchestration
# ===========================================
MAX_CONCURRENT_ATTACKS=3
ATTACK_TIMEOUT=3600000

# ===========================================
# Encryption
# ===========================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-change-this
CREDENTIAL_ENCRYPTION_KEY=your-32-byte-hex-credential-encryption-key-change-this

# ===========================================
# File Paths
# ===========================================
SCRIPTS_PATH=../../scripts
LOGS_PATH=../../logs
RESULTS_PATH=../../results
WORDLISTS_PATH=../../wordlists
CONFIG_PATH=../../config/hydra.conf
EXPORT_DIR=./exports

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
LOG_QUERIES=false
LOG_CACHE=false

# ===========================================
# WebSocket Configuration
# ===========================================
WS_PORT=3000

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:3001

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your-session-secret-change-this-in-production
