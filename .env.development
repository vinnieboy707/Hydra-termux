# Development Environment Variables
# Auto-configured for local development

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
DEVELOPMENT_MODE=true
HOT_RELOAD=true

# ============================================================================
# Security (Development defaults - NOT for production!)
# ============================================================================
JWT_SECRET=dev_jwt_secret_not_for_production
SESSION_SECRET=dev_session_secret_not_for_production

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=hydra_dev
POSTGRES_PASSWORD=hydra_dev_pass
POSTGRES_DB=hydra_dev_db
DATABASE_URL=postgresql://hydra_dev:hydra_dev_pass@postgres-dev:5432/hydra_dev_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis-dev:6379

# ============================================================================
# Application Settings
# ============================================================================
MAX_WORKERS=2
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=1
CORS_ORIGIN=http://localhost:3001

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_API_DOCS=true
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_DEBUG_ENDPOINTS=true

# ============================================================================
# Development Tools
# ============================================================================
ENABLE_PROFILING=true
ENABLE_SOURCE_MAPS=true
WEBPACK_DEV_SERVER=true
